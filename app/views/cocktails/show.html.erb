<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <ul>
      <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.description %> of <%= dose.ingredient.name %> - <%= link_to "Delete", dose_path(dose), method: :delete %>
        </li>
        <% end %>
      </ul>
      <%= link_to 'Back', cocktails_path %>

    <div>
      <%= simple_form_for( [@cocktail, @dose] ) do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit "Add" %>
      <% end %>
    </div>


    </div>
  </div>
</div>

